<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Discord logger statisztika</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('core/navbar'); %>
        <div class="container mt-3">
            <div class="row">
                <div class="col-12 d-grid gap-2 d-md-block">
                    <a href="http://localhost:3000/statistics/author/<%if(author.id>1){%><%=author.id-1%><%}else{%><%=1%><%}%>"
                        class="btn btn-success">Previous author</a>
                    <a href="http://localhost:3000/statistics/author/<%if(author.id<authors.length){%><%=author.id+1%><%}else{%><%=authors.length%><%}%>"
                        class="btn btn-success">Next author</a>
                </div>
                <div class="col-12 mt-3">
                    <h4>Author:</h4>
                    <p>ID: <%= author.id %>
                    </p>
                    <p>Name: <%= author.name %>
                    </p>
                    <p>Created: <%= author.createdAt %>
                    </p>
                </div>
                <div class="col-12 d-grid gap-2 d-md-block">
                    <a class="btn btn-success" href="http://localhost:3000/messages/author/<%= author.id %>">Go back to
                        author</a>
                    <button id="seeStatistics" class="btn btn-success">Show statistics</button>
                </div>
                <div id="statistics" class="col-12 mt-3 d-none">
                    <h4>Here you can see the usage rate of each letter out of all the letters typed by the author:</h4>
                    <% letterStatistics.forEach(stat=> { %>
                        <% Object.entries(stat).forEach(([letter, percent])=> { %>
                            <p class="mt-2">
                                <%= letter %>: <%= percent %>%
                            </p>
                            <div class="progress" role="progressbar" aria-label="Basic example"
                                aria-valuenow="<%= percent %>" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar" style="width: <%= percent %>%"></div>
                            </div>
                            <% }); %>
                                <% }); %>
                </div>
                <div class="col-12 mt-3">
                    <table class="table table-striped">
                        <thead>
                            <th>ID</th>
                            <th>Letter</th>
                            <th>Count</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </thead>
                        <tbody>
                            <% letterCounters.forEach(row=> { %>
                                <tr>
                                    <td>
                                        <%= row.id %>
                                    </td>
                                    <td>
                                        <%= row.letter %>
                                    </td>
                                    <td>
                                        <%= row.count %>
                                    </td>
                                    <td>
                                        <%= row.createdAt %>
                                    </td>
                                    <td>
                                        <%= row.updatedAt %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script src="/statistics.js"></script>
        <script src="/index.js"></script>
</body>

</html>