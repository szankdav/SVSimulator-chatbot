<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Discord logger statisztika</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12 d-grid gap-2 d-md-block">
                <button class="btn btn-success"><a id="previousButton">Previous</a></button>
                <button class="btn btn-success"><a id="firstPageNumberButton">
                    </a></button>
                <button class="btn btn-success"><a id="secondPageNumberButton">
                    </a></button>
                <button class="btn btn-success"><a id="thirdPageNumberButton">
                    </a></button>
                <button class="btn btn-success"><a id="nextButton">Next</a></button>
            </div>
            <% authors.forEach(row=> { %>
                <div class="authorName col-12" data-authorId=<%=row.id%>>
                    <div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= row.id %>
                                    </td>
                                    <td>
                                        <%= row.name %>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="/authors.js"></script>
</body>

</html>